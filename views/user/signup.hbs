<div class="container">
    <div class="row justify-content-center mt-3">

        <div class="mt-3">
            <div class="d-flex justify-content-center">
                <h2 style="align-items: center;">Create new Account</h2>
            </div>
            <form action="/signup" method="post" class="mt-3">
                <div class="form-outline mb-4">
                    <label for="name" class="form-label"></label>
                    <input type="text" id="name" class="form-control" name="name" placeholder="Name"
                        style="border-width: 2px">
                </div>
                <div class=" form-outline mb-4">
                    <input type="email" id="email" class="form-control" name="email" placeholder="Email Address"
                        style="border-width: 2px;">
                </div>
                <div class="form-outline mb-4">
                    <input type="password" id="password" class="form-control" name="password" placeholder="Password"
                        style="border-width: 2px;">
                </div>
                <div class="mt-3">
            </form>
            <a href="/login" style="margin: top 1cm ;">Already have an Account?</a>
            <button type="submit" class="btn btn-primary" style="margin-left: 3.1cm;">signup</button>

        </div>

    </div>
</div>

<script>
    $(document).ready(function(){
        $('#name').validate({
            rules:{
                name:{
                    required:true
                }
            }
        }),
         $('#password').validate({
            rules:{
                password:{
                    required:true
                }
            }
        }),
         $('#email').validate({
            rules:{
                email:{
                    required:true
                    email:true
                }
            }
        })

    })
</script>